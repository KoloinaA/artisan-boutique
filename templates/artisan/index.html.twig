{% extends 'base.html.twig' %}

{% block title %}Artisan index{% endblock %}

{% block body %}
    <h1>Artisan index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Business_name</th>
                <th>Description</th>
                <th>Profile_picture</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for artisan in artisans %}
            <tr>
                <td>{{ artisan.id }}</td>
                <td>{{ artisan.businessName }}</td>
                <td>{{ artisan.description }}</td>
                <td>{{ artisan.profilePicture }}</td>
                <td>{{ artisan.createdAt ? artisan.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ artisan.updatedAt ? artisan.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_artisan_show', {'id': artisan.id}) }}">show</a>
                    <a href="{{ path('app_artisan_edit', {'id': artisan.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_artisan_new') }}">Create new</a>
{% endblock %}
